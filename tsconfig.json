{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "isolatedModules": false
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "dist",
    "app"
  ]
}